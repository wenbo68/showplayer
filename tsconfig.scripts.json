{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext", // use commonJs instead of ESM bc scripts run with Node (Node can use ESM now but historically can only use commonJS)
    "moduleResolution": "NodeNext", // allows for CommonJS
    "outDir": "dist", // output files stored in /dist
    "noEmit": false // allows outputing files
  },
  "include": ["scripts/**/*.ts", "src/server/**/*.ts", "src/env.js"]
}

// this file is used when you run pnpm build:scripts
// it inherits all settings from tsconfig.json but overrides the above settings
